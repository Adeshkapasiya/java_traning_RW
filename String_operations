public class StringOperations {
    public static void main(String[] args) {
        String str = "Rail World";

        // Length
        System.out.println("Length: " + str.length());

        // Character extraction
        System.out.println("Character at index 1: " + str.charAt(1));

        // Substring
        System.out.println("Substring (5, 10): " + str.substring(5, 10));

        // Concatenation
        System.out.println("Concatenated string: " + str.concat(" Enjoying company ?"));

        // Replace
        System.out.println("Replace 'World' with 'Java': " + str.replace("World", "Java"));

        // Split
        String[] parts = str.split(" ");
        System.out.println("First part: " + parts[0]);
        System.out.println("Second part: " + parts[1]);

        // Case conversion
        System.out.println("Uppercase: " + str.toUpperCase());
        System.out.println("Lowercase: " + str.toLowerCase());
    }
}
